{
  "name": "ipheion-toolkit",
  "version": "0.0.1",
  "description": "The monorepo for the ipheion tools",
  "private": true,
  "scripts": {
    "test": "jest",
    "init": "npm link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Iph3i0n/toolkit.git"
  },
  "author": "Ipheion",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Iph3i0n/toolkit/issues"
  },
  "homepage": "https://github.com/Iph3i0n/toolkit#readme",
  "workspaces": [
    "lib/*",
    "app/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  },
  "bin": {
    "ipheion": "./scripts/index.js"
  },
  "jest": {
    "projects": [
      {
        "displayName": "safe-type",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/lib/safe-type/**/*.test.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": [
            "ts-jest",
            {
              "tsconfig": "<rootDir>/lib/safe-type/tsconfig.json"
            }
          ]
        }
      },
      {
        "displayName": "moulding-tin",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/lib/moulding-tin/**/*.test.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": [
            "ts-jest",
            {
              "tsconfig": "<rootDir>/lib/moulding-tin/tsconfig.json"
            }
          ]
        }
      },
      {
        "displayName": "fs-db",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/lib/fs-db/**/*.test.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": [
            "ts-jest",
            {
              "tsconfig": "<rootDir>/lib/fs-db/tsconfig.json"
            }
          ]
        }
      }
    ]
  }
}
