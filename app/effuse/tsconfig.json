{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2023"],
    "downlevelIteration": true,
    "declaration": true,
    "paths": {
      "$sso/b/*": ["./src/sso/bootstrap/*"],
      "$i/*": ["./src/integrations/*"],
      "$sso/m/*": ["./src/sso/models/*"],
      "$sso/s/*": ["./src/sso/services/*"],
      "$sso/server": ["./src/sso/server.ts"]
    }
  },
  "exclude": ["**/*.test.ts", "dist/**/*", "node_modules/**/*"]
}
