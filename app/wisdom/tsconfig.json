{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ES2023", "DOM"],
    "downlevelIteration": true,
    "declaration": true,
    "baseUrl": "./src",
    "sourceMap": true
  },
  "include": ["src/**/*", "tests/**/*", "types"],
  "exclude": ["**/*.test.ts", "dist/**/*", "node_modules/**/*"]
}
